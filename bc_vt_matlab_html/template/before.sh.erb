# Export the module function if it exists
[[ $(type -t module) == "function" ]] && export -f module
module list

# override
port_used () {
  local port="${1#*:}"
  local host=$((expr "${1}" : '\\(.*\\):' || echo "localhost") | awk 'END{print $NF}')
  lsof -i :"${port}" &> /dev/null
}
export -f port_used

# Find available port to run server on
port=$(find_port ${host})

