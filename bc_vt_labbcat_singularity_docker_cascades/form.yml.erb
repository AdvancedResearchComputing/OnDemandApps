# Batch Connect app configuration file
#
---
cluster: 'cascades'

# Define attribute values that aren't meant to be modified by the user within
# the Dashboard form
attributes:
  # Set and load the  modules and environment that need to be loaded for Jupyter to run

  labbcatversion:
    widget: select
    label: "LaBB-CAT version"
    help: "Select the version of LaBB-CAT that you would like to use."
    options:
    <%- Dir.glob('/groups/arcsingularity/labbcat*sif').each do |f| -%>
      <%- sif = f.sub('/groups/arcsingularity/','') -%>
      <%- ver = f.sub('/groups/arcsingularity/','').chomp(".sif").split('_').last -%>
      - [ "LaBB-CAT: <%= ver %>", "<%= ver %>" ]
    <%- end -%>

  datadir:
    widget: text_field
    label: LaBB-CAT Directory
    value: "$HOME/labbcat"
    help: |
       - Directory to store your LaBB-CAT installation and database. Changing this to a new directory will reset your install - you will no longer see any files that you've uploaded or analyses that you've done.
       - Default: $HOME/labbcat

  bc_queue:
    help: |
      - To request a GPU enabled queue, preface it with v100_. Example: v100_normal_q

  bc_num_hours:
    label: Number of hours (min-1, max-48)
    required: true
    value: 1
    min: 1
    max: 72
    step: 1

  bc_num_slots:
    label: Number of nodes (min-1, max-2)
    required: true
    value: 1
    min: 1
    max: 2
    step: 1

  bc_account:
    widget: text_field
    label: Account
    value: ""
    help: |
       - The allocation you would like to use for SLURM.

  num_cores:
    widget: number_field
    label: Number of cores per node (min-1, max-8)
    value: 1
    min: 1
    max: 8
    step: 1

#  gpu_per_node:
#    widget: number_field
#    label: Number of GPUs per node (min-0, max-2)
#    value: 0
#    min: 0
#    max: 2
#    step: 1
#    help: |
#       - If requesting GPU nodes, you must enter a GPU-enabled Partition above or the job will fail.

# All of the attributes that make up the Dashboard form (in respective order),
# and made available to the submit configuration file and the template ERB
# files
#
form:
  - labbcatversion
  - datadir
  - bc_account
  - reservation
  - bc_queue
  - bc_num_hours
  - bc_num_slots
  - num_cores
#  - gpu_per_node
  - bc_email_on_started
