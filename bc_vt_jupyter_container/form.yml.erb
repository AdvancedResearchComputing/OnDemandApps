# Batch Connect app configuration file
#
---

cluster:
  - 'tinkercliffs'
  - 'infer'

# Define attribute values that aren't meant to be modified by the user within
# the Dashboard form
attributes:
  # Set and load the  modules and environment that need to be loaded for Jupyter to run

  bc_queue:
    help: |
      - To request a GPU enabled queue, preface it with v100_. Example: v100_normal_q

  bc_num_hours:
    label: Number of hours (min-1, max-48)
    required: true
    value: 1
    min: 1
    max: 72
    step: 1

  bc_num_slots:
    label: Number of nodes (min-1, max-2)
    required: true
    value: 1
    min: 1
    max: 2
    step: 1

  bc_account:
    widget: text_field
    label: Account
    value: ""
    help: |
       - The allocation you would like to use for SLURM.

  num_cores:
    widget: number_field
    label: Number of cores per node (min-1, max-32)
    value: 1
    min: 1
    max: 32
    step: 1

  gpu_per_node:
    widget: number_field
    label: Number of GPUs per node (min-0, max-2)
    value: 0
    min: 0
    max: 2
    step: 1
    help: |
       - If requesting GPU nodes, you must enter a GPU-enabled Partition above or the job will fail.

  Container:
    widget: select
    label: "use container"
    help: |
       - These Images are pulled directly from the Jupyter Docker Stacks.  See here: https://jupyter-docker-stacks.readthedocs.io/en/latest/using/selecting.html#core-stacks
    value: ""    
    options:
    <%- Dir.glob('/projects/arcsingularity/AMD/*jupyter*sif').each do |f| -%>
      <%- sif = f.sub('/projects/arcsingularity/AMD/','') -%>
      <%- pkg = f.sub('/projects/arcsingularity/AMD/','').sub('desktop','').chomp(".sif").split('_').first -%>
      <%- JNver = f.sub('/projects/arcsingularity/AMD/','').sub('desktop','').chomp(".sif").split('_').last -%>
      - [ "JN: <%= sif %>", "<%= sif %>" ]
    <%- end -%>

# All of the attributes that make up the Dashboard form (in respective order),
# and made available to the submit configuration file and the template ERB
# files
#
form:
  - Container
  - bc_account
  - reservation
  - bc_queue
  - bc_num_hours
  - bc_num_slots
  - num_cores
#  - gpu_per_node
  - bc_email_on_started
