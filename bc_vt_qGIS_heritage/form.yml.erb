# Batch Connect app configuration file
#
---
cluster: 
  - 'dragonstooth'
  - 'cascades'

# Define attribute values that aren't meant to be modified by the user within
# the Dashboard form
attributes:

# specify widgets for user modifiable job settings
  bc_queue:
    widget: select
    label: "Partition or queue"
    help: |
      - Partition to run in.
    options:
      - [ "normal_q", "normal_q" ]
      - [ "dev_q", "dev_q" ]

  bc_num_hours:
    label: Number of hours (min-1, max-48)
    required: true
    value: 1
    min: 1
    max: 48
    step: 1

  bc_num_slots: 1

  bc_account:
    widget: text_field
    label: Account
    value: ""
    help: |
       - The allocation you would like to use for SLURM.

  num_cores:
    widget: number_field
    label: Number of cores per node (min-1, max-12)
    value: 1
    min: 1
    max: 12
    step: 1

  bc_vnc_resolution:
    required: true

# All of the attributes that make up the Dashboard form (in respective order),
# and made available to the submit configuration file and the template ERB
# files
#
form:
  - cluster
  - bc_account
  - reservation
  - bc_queue
  - bc_num_hours
  - bc_num_slots
  - num_cores
  - bc_vnc_resolution
  - bc_email_on_started
