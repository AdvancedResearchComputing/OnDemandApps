  Rversion:
    widget: select
    label: "R version and package set"
    help: "This defines the R version and basic packages installed. You can install more in your session."
    options:
      <%- availsifs = %x( ssh -q cascades1.arc.vt.edu ls /groups/arcsingularity/ | grep rstudio ).split("\n") -%>
      <%- availsifs.each do |f| -%>
        <%- sif = f -%>
        <%- pkg = f.sub('ood-rstudio-','').chomp(".sif").split('_').first -%>
        <%- Rver = f.sub('ood-rstudio-','').chomp(".sif").split('_').last -%>
        - [ "R: <%= Rver %>  <%= pkg %>", "<%= sif %>" ]
      <%- end -%>


# All of the attributes that make up the Dashboard form (in respective order),
# and made available to the submit configuration file and the template ERB
# files
#
form:
  - Rversion
  - bc_account
  - reservation
  - bc_queue
  - bc_num_hours
  - bc_num_slots
  - num_cores
